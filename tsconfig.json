{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext",
		],
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"declaration": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"declarationMap": true,
		"baseUrl": ".",
		"paths": {
			"futurable": [
				"src/index.ts"
			]
		},
		"typeRoots": [
			"node_modules/@types",
			"src/index.ts"
		]
	},
	"include": [
		"src"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
