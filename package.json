{
	"name": "futurable",
	"private": false,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"build": "tsc && vite build",
		"test": "NODE_OPTIONS=--experimental-vm-modules jest",
		"lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
		"lint:fix": "eslint --fix 'src/**/*.{jsx,ts,tsx}'",
		"format": "prettier --write src//**/*.{ts,tsx,css} --config ./.prettierrc",
		"prepare": "pnpm run build",
		"prepublishOnly": "pnpm test && pnpm run format && pnpm run lint"
	},
	"engines": {
		"node": ">=16.13.2"
	},
	"files": [
		"dist/"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/futurable.es.js",
			"require": "./dist/futurable.umd.js",
			"node": {
				"types": "./dist/index.d.ts",
				"require": "./dist/futurable.cjs.js",
				"import": "./dist/futurable.es.js"
			}
		}
	},
	"main": "./dist/futurable.umd.js",
	"module": "./dist/futurable.es.js",
	"types": "./dist/index.d.ts",
	"devDependencies": {
		"@babel/preset-typescript": "^7.21.5",
		"@jest/globals": "^29.5.0",
		"@types/node": "^20.1.1",
		"@typescript-eslint/eslint-plugin": "^5.59.5",
		"@typescript-eslint/parser": "^5.59.5",
		"eslint": "^8.40.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-prettier": "^4.2.1",
		"jest": "^29.5.0",
		"prettier": "^2.8.8",
		"ts-jest": "^29.1.0",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.2",
		"vite": "^4.3.2",
		"vite-plugin-dts": "^2.3.0",
		"vite-plugin-linter": "^2.0.2",
		"vite-tsconfig-paths": "^4.2.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/nDriaDev/futurable"
	},
	"keywords": [
		"promise",
		"cancel",
		"abort",
		"delay",
		"sleep",
		"abortable",
		"cancelable",
		"futurable"
	],
	"author": "nDriaDev",
	"bugs": {
		"url": "https://github.com/nDriaDev/futurable/issues"
	},
	"homepage": "https://github.com/nDriaDev/futurable#readme",
	"license": "MIT"
}
